<div class="container center-block padCont"> 
  <div class="col-lg-offset-1 col-lg-10 col-lg-offset-1">
    <h2 class="crearH2">Bienvenido, <%= current_usuario.nombre+'  '%></h2>   
    <div class="panel panel-default">
      <div class="panel-body">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#home"><%=current_usuario.nombre%></a></li>
          <li><a data-toggle="tab" href="#menu1">Mensajes</a></li>
            <li><a data-toggle="tab" href="#menu2">Reservaciones</a></li>
            <%if(rol_usuario=='Arrendatario')%>
                <li><a data-toggle="tab" href="#menu3">Favoritos</a></li>
            <%end%>
            <%if(rol_usuario=='Arrendador')%>
                <li><a data-toggle="tab" href="#menu4">Mis propiedades</a></li>
            <%end%>
        </ul>

        <div class="tab-content">
          <div id="home" class="tab-pane fade in active">
            <%=render "partials/info"%>
          </div>
          <div id="menu1" class="tab-pane fade">
            <%=render "partials/msgs"%>
          </div>
          <div id="menu2" class="tab-pane fade">
            <%=render "partials/res"%>
          </div>
          <div id="menu3" class="tab-pane fade">
            <%=render "partials/fav"%>
          </div>
          <%if(rol_usuario=='Arrendador')%>
          <div id="menu4" class="tab-pane fade">
            <%=render "partials/prop"%>
          </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div> 