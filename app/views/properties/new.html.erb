<div class="container centradito">

<h1>Agregar una propiedad</h1>
<%= form_for :property, url: properties_path, html:{multipart:true} do |f| %>
	<% if @property.errors.any? %>
		<% @property.errors.full_messages.each do |msg| %>
			<div class = "alert alert-danger"><%= msg %></div>
			<% end %>
		<% end %>
		
	<p>
		<%= f.label :title, 'Título' %><br>
		<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.label :price, 'Precio' %><br>
		<%= f.number_field(:price) %>
	</p>
	<p>
		<%= f.label :description, 'Descripción' %><br>
		<%= f.text_area(:description,{:class => 'form-control'})%>
	</p>
	<p>
		<%= f.label :image, 'Imagen' %><br>
		<%= f.file_field(:image) %>
	</p>

	<p>
		<%= f.submit({value:'Agregar propiedad', :class => 'btn btn-primary'}) %>
		<%= @currentArrendatarioId %>
	</p>
<% end %>
</div>